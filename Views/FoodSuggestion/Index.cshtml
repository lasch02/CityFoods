@{
}

@model List<CityFoods.Models.CityFoodSuggestion> 

<form asp-action="Index" method="get">
    <div  class="form group">
        <label for="searchString">Search For Suggestion By City:</label>
        <input type="text" name="searchString"
               value="@ViewBag.CurrentFilter" />
        <input type="submit" value="Search" class="btn btn-primary" />  
    </div>
   
</form>
    
<a asp-action="Index">Back To Full List Of Suggestions</a>
 
<hr />

<table class="table">
    <tr>
        <th>Unique Food Name</th>
        <th>City</th>
        <th>State</th>
        <th>Restaurant Name</th>
        <th>Image Url</th>

    </tr>
    @foreach(var cityFood in Model)
    {
        <tr>
            <td><a asp-controller="FoodSuggestion" asp-action="About" asp-route-id="@cityFood.Id">@cityFood.NameOfUniqueFood</a></td>
            <td>@cityFood.City</td>
            <td>@cityFood.State</td>
            <td>@cityFood.RestaurantName</td>
            <td><img src=@cityFood.ImgUrl width="30%" /></td>
        </tr>
    }
</table>

<a asp-controller="FoodSuggestion" asp-action="AddFoodSuggestion">
    <input type="button" class="btn btn-primary" value="Add More Unique Food Suggestions" />
</a>
